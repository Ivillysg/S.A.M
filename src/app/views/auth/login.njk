{% extends "layouts/main.njk" %} {%block body%}
<style>
  body {
    background-image: url("/assets/img/bg.jpg");
    background-repeat: no-repeat;
    background-size: cover;
  }

  .card-body {
    background-color: #f5f5f5;
    -webkit-box-shadow: 3px 3px 36px -5px rgba(0, 0, 0, 0.75);
    -moz-box-shadow: 3px 3px 36px -5px rgba(0, 0, 0, 0.75);
    box-shadow: 3px 3px 36px -5px rgba(0, 0, 0, 0.75);
  }

  .btn {
    transition: all 0.5s;
    background-color: #002c3b;
  }

  .btn:hover {
    background-color: #08aeea;
    padding-left: 150px;
    padding-right: 150px;
  }
</style>
<div class="header bg-gradient-primary py-7 py-lg-8">
  <div class="container">
    <div class="header-body text-center mb-7">
      <div class="row justify-content-center">
        <div class="col-lg-5 col-md-6 mt-5">
          <h1 class="text-black display-3">√Årea de login</h1>
        </div>
      </div>
    </div>
  </div>

  <!-- Page content -->
  
  <div class="container mt--8 pb-5 mt-5">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-7">
          {% include "partials/msg.njk" %}
        <div class="card bg-secondary shadow border-0">
          
          <div class="card-body px-lg-5 py-lg-5">
            
            <form action="/auth" method="POST">
              <div class="row mt-3">
                
                <div class="col-md-12">
                  <div class="form-group">
                    <label class="bmd-label-floating">Usuario:</label>
                    <input style="padding: 10px;" name="username" value="" type="text" class="form-control" required />
                  </div>
                </div>
                <div class="col-md-12 mt-3">
                  <div class="form-group">
                    <label class="bmd-label-floating">Senha:</label>
                    <input style="padding: 10px;" name="password" value="" type="password" class="form-control"
                      required />
                  </div>
                </div>
              </div>

              <div class="text-center">
                <button type="submit" class="btn my-4">
                  Entrar
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  {%endblock%}
</div>